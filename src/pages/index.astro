---
import BaseLayout from "@/layouts/BaseLayout.astro";
import BlogCard from "@/components/BlogCard.astro";
import { getCollection } from "astro:content";
import { SITE } from "@/lib/constants";

const posts = (await getCollection("blog", ({ data }) => !data.draft))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 5);
---

<BaseLayout title={SITE.title} description={SITE.description}>
  <section>
    <div class="flex items-center justify-between">
      <h2
        class="font-display text-xl font-bold tracking-tight"
        style="font-variation-settings: 'opsz' 24, 'WONK' 1;"
      >
        Ultimi articoli
      </h2>
      <a
        href="/blog"
        class="text-xs font-medium uppercase tracking-widest text-accent transition-colors hover:text-accent-hover"
      >
        Vedi tutti &rarr;
      </a>
    </div>

    <div class="stagger-children mt-8 space-y-0">
      {
        posts.map((post) => (
          <BlogCard
            title={post.data.title}
            description={post.data.description}
            pubDate={post.data.pubDate}
            tags={post.data.tags}
            slug={post.id}
          />
        ))
      }
    </div>

    {posts.length === 0 && (
      <p class="mt-6 text-text-secondary">Nessun articolo ancora. Torna presto!</p>
    )}
  </section>
</BaseLayout>
