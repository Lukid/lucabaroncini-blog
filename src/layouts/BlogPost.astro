---
import BaseLayout from "./BaseLayout.astro";
import TagBadge from "@/components/TagBadge.astro";
import CopyButton from "@/components/CopyButton.astro";
import { SITE } from "@/lib/constants";
import type { Tag } from "@/lib/constants";

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  updatedDate?: Date;
  heroImage?: ImageMetadata;
  tags: Tag[];
  prevPost?: { slug: string; title: string };
  nextPost?: { slug: string; title: string };
}

const { title, description, pubDate, updatedDate, heroImage, tags, prevPost, nextPost } =
  Astro.props;

const formattedDate = pubDate.toLocaleDateString(SITE.locale, {
  year: "numeric",
  month: "long",
  day: "numeric",
});

const formattedUpdated = updatedDate?.toLocaleDateString(SITE.locale, {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<BaseLayout title={title} description={description} type="article" pubDate={pubDate} updatedDate={updatedDate}>
  <article>
    <header class="fade-in-observed mb-12">
      <time
        datetime={pubDate.toISOString()}
        class="text-xs font-medium uppercase tracking-widest text-[var(--color-text-secondary)]"
      >
        {formattedDate}
      </time>
      {
        formattedUpdated && (
          <span class="text-xs uppercase tracking-widest text-[var(--color-text-secondary)]">
            {" "}
            &middot; Aggiornato il {formattedUpdated}
          </span>
        )
      }
      <h1
        class="mt-3 font-display text-4xl font-black tracking-tight sm:text-5xl"
        style="font-variation-settings: 'opsz' 48, 'WONK' 1;"
      >
        {title}
      </h1>
      {
        tags.length > 0 && (
          <div class="mt-4 flex flex-wrap gap-1.5">
            {tags.map((tag) => (
              <TagBadge tag={tag} />
            ))}
          </div>
        )
      }
    </header>

    {
      heroImage && (
        <img
          src={heroImage.src}
          width={heroImage.width}
          height={heroImage.height}
          alt=""
          class="mb-12 w-[calc(100%+2rem)] -ml-4"
          loading="eager"
          decoding="async"
        />
      )
    }

    <div class="prose prose-dropcap">
      <slot />
    </div>

    <CopyButton />

    {/* Post navigation */}
    {
      (prevPost || nextPost) && (
        <nav class="mt-12 flex flex-col gap-4 border-t border-[var(--color-border)] pt-8 sm:flex-row sm:justify-between">
          {prevPost ? (
            <a
              href={`/blog/${prevPost.slug}`}
              class="group text-sm"
            >
              <span class="text-xs uppercase tracking-widest text-[var(--color-text-secondary)]">&larr; Precedente</span>
              <span class="mt-1 block font-display font-medium transition-colors group-hover:text-[var(--color-accent)]">
                {prevPost.title}
              </span>
            </a>
          ) : (
            <div />
          )}
          {nextPost && (
            <a
              href={`/blog/${nextPost.slug}`}
              class="group text-right text-sm"
            >
              <span class="text-xs uppercase tracking-widest text-[var(--color-text-secondary)]">Successivo &rarr;</span>
              <span class="mt-1 block font-display font-medium transition-colors group-hover:text-[var(--color-accent)]">
                {nextPost.title}
              </span>
            </a>
          )}
        </nav>
      )
    }
  </article>
</BaseLayout>
