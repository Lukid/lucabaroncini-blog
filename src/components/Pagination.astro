---
interface Props {
  prevUrl: string | undefined;
  nextUrl: string | undefined;
  currentPage: number;
  lastPage: number;
}

const { prevUrl, nextUrl, currentPage, lastPage } = Astro.props;
---

{
  lastPage > 1 && (
    <nav aria-label="Navigazione pagine" class="mt-12 flex items-center justify-center gap-4">
      {prevUrl ? (
        <a
          href={prevUrl}
          class="border border-border px-4 py-2 text-xs font-medium uppercase tracking-wider transition-colors hover:border-accent hover:text-accent"
        >
          &larr; Precedente
        </a>
      ) : (
        <span class="border border-transparent px-4 py-2 text-xs uppercase tracking-wider text-text-secondary opacity-40">
          &larr; Precedente
        </span>
      )}

      <span class="font-display text-sm text-text-secondary" aria-current="page">
        {currentPage} / {lastPage}
      </span>

      {nextUrl ? (
        <a
          href={nextUrl}
          class="border border-border px-4 py-2 text-xs font-medium uppercase tracking-wider transition-colors hover:border-accent hover:text-accent"
        >
          Successiva &rarr;
        </a>
      ) : (
        <span class="border border-transparent px-4 py-2 text-xs uppercase tracking-wider text-text-secondary opacity-40">
          Successiva &rarr;
        </span>
      )}
    </nav>
  )
}
