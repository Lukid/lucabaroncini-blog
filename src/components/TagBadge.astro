---
import type { Tag } from "@/lib/constants";

interface Props {
  tag: Tag;
}

const { tag } = Astro.props;
---

<a
  href={`/tags/${tag}`}
  class="inline-block border border-border px-2.5 py-1 text-xs font-medium uppercase tracking-wider text-text-secondary transition-colors hover:border-accent hover:text-accent"
>
  {tag}
</a>
