const styles = {
  info: "border-blue-400/40 bg-blue-50 dark:bg-blue-950/20",
  warning: "border-amber-400/40 bg-amber-50 dark:bg-amber-950/20",
  tip: "border-green-400/40 bg-green-50 dark:bg-green-950/20",
